        <datasource>
            <name>WSO2_GOVERNANCE_DB</name>
            <description>The datasource used for governance MySQL database</description>
            <jndiConfig>
                <name>jdbc/<%= node[:appserver][:registry_database] %></name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <url>jdbc:mysql://<%= node[:base][:mysql_server] %>:<%= node[:base][:mysql_port] %>/<%= node[:appserver][:registry_database] %>?autoReconnect=true</url>
                    <username><%= node[:appserver][:registry_user] %></username>
                    <password><%= node[:appserver][:registry_password] %></password>
                    <driverClassName>com.mysql.jdbc.Driver</driverClassName>
                    <maxActive><%= node[:base][:mysql_max_active] %></maxActive>
                    <maxWait><%= node[:base][:mysql_max_wait] %></maxWait>
                    <minIdle>5</minIdle>
                    <testOnBorrow>true</testOnBorrow>
                    <validationQuery>SELECT 1</validationQuery>
                    <validationInterval>30000</validationInterval>
                </configuration>
            </definition>
        </datasource>

